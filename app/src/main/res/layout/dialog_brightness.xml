<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_brightness_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/brightness_height"
        android:gravity="center"
        android:text="@string/brightness_title"
        android:textColor="@color/purple" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekBar_system_brightness"
            android:layout_width="@dimen/brightness_width"
            android:layout_height="@dimen/brightness_height"
            android:layout_marginLeft="@dimen/brightness_height"
            android:max="255" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/brightness_height"
            android:gravity="center"
            android:id="@+id/textView_system_brightness"
            android:text="@string/system_brightness"/>

    </LinearLayout>



</LinearLayout>

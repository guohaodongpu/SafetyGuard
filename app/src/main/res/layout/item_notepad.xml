<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_position"
        android:layout_width="@dimen/notepad_width"
        android:layout_height="@dimen/notepad_height"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/notepad_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/notepad_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_event"
            android:layout_width="match_parent"
            android:layout_height="@dimen/notepad_text_size"
            android:layout_marginTop="@dimen/notepad_text_margin_top"/>

    </LinearLayout>



</LinearLayout>
